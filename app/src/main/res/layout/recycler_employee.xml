<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:elevation="10dp"
    android:background="@drawable/back_toolbar"
    android:id="@+id/toolbar_points"
    android:layout_height="140dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_image_back"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back_fundo_photo"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_image_perfil"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:background="@drawable/back_fundo_photo"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/icon_image_back"
        app:layout_constraintEnd_toEndOf="@+id/icon_image_back"
        app:layout_constraintStart_toStartOf="@+id/icon_image_back"
        app:layout_constraintTop_toTopOf="@+id/icon_image_back"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_view_name_employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/funcionario"
        android:textColor="@color/letras"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/icon_image_perfil"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/edit_employee"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_edit_24"
        app:layout_constraintBottom_toBottomOf="@+id/remove_employee"
        app:layout_constraintEnd_toStartOf="@+id/remove_employee"
        app:layout_constraintTop_toTopOf="@+id/remove_employee"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar1"
        app:layout_constraintEnd_toStartOf="@+id/toolbar1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar1"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/toolbar4"
        app:layout_constraintTop_toTopOf="@+id/toolbar4"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/remove_employee"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints" />

    <TextView
        android:id="@+id/text_cargo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textStyle="italic"
        android:text="Cargo"
        android:textColor="@color/letras"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/text_view_name_employee"
        app:layout_constraintTop_toBottomOf="@+id/text_view_name_employee" />

    <TextView
        android:id="@+id/text_data_admission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="AdmissÃ£o"
        android:textColor="@color/letras"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/text_cargo"
        app:layout_constraintTop_toBottomOf="@+id/text_cargo" />

    <TextView
        android:id="@+id/text_data_ponto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:singleLine="true"
        android:text="Hoje"
        android:textColor="@color/letras"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <ImageView
        android:id="@+id/toolbar1"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/back_fundo"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintEnd_toStartOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/toolbar2"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/back_fundo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guide_start"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/toolbar3"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/back_fundo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guide_start"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/toolbar4"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/back_fundo"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar3"
        app:layout_constraintStart_toEndOf="@+id/toolbar3"
        app:layout_constraintTop_toTopOf="@+id/toolbar3"
        tools:ignore="ContentDescription,MissingConstraints" />

    <TextView
        android:id="@+id/text_hora1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_name_employee"
        android:text="@string/_00_00"
        android:textColor="@color/letras"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar1"
        app:layout_constraintEnd_toEndOf="@+id/toolbar1"
        app:layout_constraintStart_toStartOf="@+id/toolbar1"
        app:layout_constraintTop_toTopOf="@+id/toolbar1" />

    <TextView
        android:id="@+id/text_hora2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_name_employee"
        android:text="@string/_00_00"
        android:textColor="@color/letras"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintEnd_toEndOf="@+id/toolbar2"
        app:layout_constraintStart_toStartOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_hora3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_name_employee"
        android:text="@string/_00_00"
        android:textColor="@color/letras"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar3"
        app:layout_constraintEnd_toEndOf="@+id/toolbar3"
        app:layout_constraintStart_toStartOf="@+id/toolbar3"
        app:layout_constraintTop_toTopOf="@+id/toolbar3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_hora4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_name_employee"
        android:text="@string/_00_00"
        android:textColor="@color/letras"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar4"
        app:layout_constraintEnd_toEndOf="@+id/toolbar4"
        app:layout_constraintStart_toStartOf="@+id/toolbar4"
        app:layout_constraintTop_toTopOf="@+id/toolbar4"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
