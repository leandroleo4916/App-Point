<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activitys.RegisterUser">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_user"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/border"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_account"
        app:layout_constraintBottom_toBottomOf="@+id/user_login_register"
        app:layout_constraintStart_toStartOf="@+id/toolbar_user"
        app:layout_constraintTop_toTopOf="@+id/user_login_register"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/user_login_register"
        android:layout_width="320dp"
        android:layout_height="46dp"
        android:inputType="text"
        android:hint="@string/nome"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_user"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_user"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toEndOf="@+id/img_account"
        app:layout_constraintTop_toTopOf="@+id/toolbar_user"
        app:layout_constraintVertical_bias="0.458"
        tools:ignore="MissingConstraints,TextViewEdits" />

    <androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar_email"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/border"
    android:paddingBottom="12dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/toolbar_user"
    tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_email"
        app:layout_constraintBottom_toBottomOf="@+id/email_user"
        app:layout_constraintStart_toStartOf="@+id/toolbar_email"
        app:layout_constraintTop_toTopOf="@+id/email_user"
        app:layout_constraintVertical_bias="0.434"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/email_user"
        android:layout_width="320dp"
        android:layout_height="46dp"
        android:inputType="textPassword"
        android:hint="@string/email"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_email"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_email"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toEndOf="@+id/img_email"
        app:layout_constraintTop_toTopOf="@+id/toolbar_email"
        app:layout_constraintVertical_bias="0.416"
        tools:ignore="MissingConstraints,TextViewEdits" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_email"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_password"
        app:layout_constraintBottom_toBottomOf="@+id/password_user"
        app:layout_constraintStart_toStartOf="@+id/toolbar_password"
        app:layout_constraintTop_toTopOf="@+id/password_user"
        app:layout_constraintVertical_bias="0.434"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/password_user"
        android:layout_width="320dp"
        android:layout_height="46dp"
        android:inputType="textPassword"
        android:hint="@string/senha"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_password"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_password"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toEndOf="@+id/img_password"
        app:layout_constraintTop_toTopOf="@+id/toolbar_password"
        app:layout_constraintVertical_bias="0.416"
        tools:ignore="MissingConstraints,TextViewEdits" />

    <Button
        android:id="@+id/buttom_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        android:text="@string/salvar"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_password"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>