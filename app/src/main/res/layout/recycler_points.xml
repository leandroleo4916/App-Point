<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:elevation="@dimen/cardview_default_radius"
    android:background="@drawable/back_toolbar"
    android:layout_height="85dp">

    <ImageView
        android:id="@+id/text_cycle_cor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:background="@drawable/card_view"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_alignStart="@+id/text_cycle_cor"
        android:layout_alignTop="@+id/text_cycle_cor"
        android:layout_alignEnd="@+id/text_cycle_cor"
        android:layout_alignBottom="@+id/text_cycle_cor"
        android:background="@drawable/cycle"
        android:gravity="center"
        android:text="F"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_cycle_cor"
        app:layout_constraintEnd_toEndOf="@+id/text_cycle_cor"
        app:layout_constraintStart_toStartOf="@+id/text_cycle_cor"
        app:layout_constraintTop_toTopOf="@+id/text_cycle_cor" />

    <TextView
        android:id="@+id/text_nome_funcionario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_icon"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/text_icon"
        android:text="Funcionario"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/text_cycle_cor"
        app:layout_constraintTop_toTopOf="@+id/icon_image" />

    <TextView
        android:id="@+id/text_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/text_hora"
        android:singleLine="true"
        android:text="20 Out"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.466" />

    <TextView
        android:id="@+id/text_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_nome_funcionario"
        android:singleLine="true"
        android:text="00:00"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_nome_funcionario"
        app:layout_constraintTop_toBottomOf="@+id/text_nome_funcionario"
        app:layout_constraintVertical_bias="0.110000014" />

</androidx.constraintlayout.widget.ConstraintLayout>
