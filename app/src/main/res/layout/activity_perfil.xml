        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_toolbar_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="fulanobeltrano@gmail.com"
        android:textColor="@color/letrashint"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/textview_email"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_toolbar_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="(11) 93722-3128"
        android:textColor="@color/letrashint"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/textview_phone"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_toolbar_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="22/11/1988"
        android:textColor="@color/letrashint"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/textview_email3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_toolbar_admissao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="02/02/2021"
        android:textColor="@color/letrashint"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/textview_email4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_toolbar_hora1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="08:00"
        android:textColor="@color/letrashint"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/textview_email5"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_toolbar_barra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="-"
        android:textColor="@color/letrashint"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/text_toolbar_hora1"
        app:layout_constraintTop_toBottomOf="@+id/textview_email5"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_toolbar_barra2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="-"
        android:textColor="@color/letrashint"
        android:textSize="18sp"
