<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    tools:context=".activitys.ProfileActivity">

    <ImageView
        android:id="@+id/image_back_perfil"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/buttom_back"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/perfil_funcionario"
        android:textColor="@color/letrashint"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/search"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/ic_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints" />

    <TextView
        android:id="@+id/text_name_employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Fulano Beltrano"
        android:textColor="@color/fundo"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/image_photo_employee"
        app:layout_constraintStart_toStartOf="@+id/image_photo_employee"
        app:layout_constraintTop_toBottomOf="@+id/image_photo_employee"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_cargo_employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Assistente Administrativo"
        android:textColor="@color/letrashint"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/text_name_employee"
        app:layout_constraintStart_toStartOf="@+id/text_name_employee"
        app:layout_constraintTop_toBottomOf="@+id/text_name_employee"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_cargo_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Ativo"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/image_photo_employee"
        app:layout_constraintEnd_toEndOf="@+id/image_photo_employee"
        app:layout_constraintStart_toStartOf="@+id/image_photo_employee"
        tools:ignore="MissingConstraints" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_photo_employee"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="46dp"
        android:contentDescription="@string/buttom_back"
        android:src="@drawable/man"
        app:layout_constraintCircleRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/edit_employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_24"
        app:layout_constraintEnd_toEndOf="@+id/image_photo_employee"
        app:layout_constraintTop_toTopOf="@+id/image_photo_employee"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/image_toolbar_hrs"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/back_fundo"
        android:contentDescription="@string/buttom_back"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_photo_employee"
        app:layout_constraintEnd_toStartOf="@+id/image_photo_employee"
        app:layout_constraintTop_toBottomOf="@+id/text_cargo_active"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/image_toolbar_"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/back_fundo"
        android:contentDescription="@string/buttom_back"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_photo_employee"
        app:layout_constraintStart_toEndOf="@+id/edit_employee"
        app:layout_constraintTop_toBottomOf="@+id/text_cargo_active"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_hrs_feitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Horas Feitas"
        android:textColor="@color/letras"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/image_toolbar_hrs"
        app:layout_constraintStart_toStartOf="@+id/image_toolbar_hrs"
        app:layout_constraintTop_toBottomOf="@+id/image_toolbar_hrs"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/edit_hrs_feitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:elevation="10dp"
        android:textColor="@color/back"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_toolbar_hrs"
        app:layout_constraintEnd_toEndOf="@+id/image_toolbar_hrs"
        app:layout_constraintStart_toStartOf="@+id/image_toolbar_hrs"
        app:layout_constraintTop_toTopOf="@+id/image_toolbar_hrs"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_hrs_extras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Horas Extras"
        android:textColor="@color/letras"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/image_toolbar_"
        app:layout_constraintStart_toStartOf="@+id/image_toolbar_"
        app:layout_constraintTop_toBottomOf="@+id/image_toolbar_"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/edit_hrs_extras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:elevation="10dp"
        android:textColor="@color/back"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_toolbar_"
        app:layout_constraintEnd_toEndOf="@+id/image_toolbar_"
        app:layout_constraintStart_toStartOf="@+id/image_toolbar_"
        app:layout_constraintTop_toTopOf="@+id/image_toolbar_"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_bottom_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/fundo"
        android:src="@drawable/ic_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="@color/letras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_cargo_employee" />

    <TextView
        android:id="@+id/text_date_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="Pontos realizados"
        android:textColor="@color/letras"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/search_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/ic_calendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:ignore="ContentDescription,MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="310dp"
        app:layout_constraintEnd_toEndOf="@+id/text_date_current"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="@+id/text_date_current"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/recycler_time_line" />

</androidx.constraintlayout.widget.ConstraintLayout>