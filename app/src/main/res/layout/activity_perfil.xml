        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/text_toolbar_hora2"
        app:layout_constraintStart_toEndOf="@+id/text_toolbar_hora2"
        app:layout_constraintTop_toTopOf="@+id/text_toolbar_hora2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_toolbar_hora2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="12:00"
        android:textColor="@color/letrashint"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/text_toolbar_barra"
        app:layout_constraintStart_toEndOf="@+id/text_toolbar_barra"
        app:layout_constraintTop_toTopOf="@+id/text_toolbar_barra"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_toolbar_hora3"
        android:layout_width="wrap_content"
