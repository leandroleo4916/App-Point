        app:layout_constraintTop_toTopOf="@+id/text_toolbar_barra3"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_toolbar_hora4"
        android:layout_width="wrap_content"
