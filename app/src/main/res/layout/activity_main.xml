<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true"
        android:gravity="center"
        android:background="@color/colorPrimaryDark">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorPrimaryDark"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_toolbar_points"
                    tools:ignore="MissingConstraints">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp">

                        <TextView
                            android:id="@+id/text_ola"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ola"
                            android:textColor="@color/letras"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/text_name_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="@string/usuario"
                            android:textColor="@color/letras"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/text_ola"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exclamacao"
                            android:textColor="@color/letras"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_name_user"
                            app:layout_constraintStart_toEndOf="@+id/text_name_user"
                            app:layout_constraintTop_toTopOf="@+id/text_name_user" />

                        <ImageView
                            android:id="@+id/option_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_option"
                            android:textColor="@color/letras"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="ContentDescription" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.Toolbar>

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    app:layout_scrollFlags="scroll|enterAlways"
                    tools:ignore="MissingConstraints,UselessParent">

                    <ImageView
                        android:id="@+id/image_register_employee"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:padding="6dp"
                        android:src="@drawable/back_fundo"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="ContentDescription,MissingConstraints"
                        tools:layout_editor_absoluteY="162dp" />

                    <ImageView
                        android:id="@+id/image_in_register"
                        android:layout_width="59dp"
                        android:layout_height="64dp"
                        android:layout_alignStart="@+id/image_register_employee"
                        android:layout_alignTop="@+id/image_register_employee"
                        android:layout_alignEnd="@+id/image_register_employee"
                        android:layout_alignBottom="@+id/image_register_employee"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="14dp"
                        android:src="@drawable/team"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/image_perfil_employee"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignTop="@+id/image_register_employee"
                        android:layout_alignBottom="@+id/image_register_employee"
                        android:layout_toEndOf="@+id/image_register_employee"
                        android:padding="6dp"
                        android:src="@drawable/back_fundo"
                        app:layout_constraintStart_toEndOf="@+id/image_register_employee"
                        tools:ignore="ContentDescription,MissingConstraints"
                        tools:layout_editor_absoluteY="162dp" />

                    <ImageView
                        android:id="@+id/image_in_perfil"
                        android:layout_width="59dp"
                        android:layout_height="64dp"
                        android:layout_alignStart="@+id/image_perfil_employee"
                        android:layout_alignTop="@+id/image_perfil_employee"
                        android:layout_alignEnd="@+id/image_perfil_employee"
                        android:layout_alignBottom="@+id/image_perfil_employee"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="14dp"
                        android:src="@drawable/man"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/image_historicos_pontos"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignTop="@+id/image_perfil_employee"
                        android:layout_alignBottom="@+id/image_perfil_employee"
                        android:layout_toEndOf="@+id/image_perfil_employee"
                        android:padding="6dp"
                        android:src="@drawable/back_fundo"
                        app:layout_constraintStart_toEndOf="@+id/image_perfil_employee"
                        tools:ignore="ContentDescription,MissingConstraints"
                        tools:layout_editor_absoluteY="162dp" />

                    <ImageView
                        android:id="@+id/image_in_clock"
                        android:layout_width="59dp"
                        android:layout_height="64dp"
                        android:layout_alignStart="@+id/image_historicos_pontos"
                        android:layout_alignTop="@+id/image_historicos_pontos"
                        android:layout_alignEnd="@+id/image_historicos_pontos"
                        android:layout_alignBottom="@+id/image_historicos_pontos"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="13dp"
                        android:src="@drawable/clock"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/image_opcoes"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignTop="@+id/image_historicos_pontos"
                        android:layout_alignBottom="@+id/image_historicos_pontos"
                        android:layout_toEndOf="@+id/image_historicos_pontos"
                        android:padding="6dp"
                        android:src="@drawable/back_fundo"
                        app:layout_constraintStart_toEndOf="@+id/image_historicos_pontos"
                        tools:ignore="ContentDescription,MissingConstraints"
                        tools:layout_editor_absoluteY="162dp" />

                    <ImageView
                        android:id="@+id/image_in_opcoes"
                        android:layout_width="59dp"
                        android:layout_height="64dp"
                        android:layout_alignStart="@+id/image_opcoes"
                        android:layout_alignTop="@+id/image_opcoes"
                        android:layout_alignEnd="@+id/image_opcoes"
                        android:layout_alignBottom="@+id/image_opcoes"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginEnd="17dp"
                        android:layout_marginBottom="13dp"
                        android:src="@drawable/tool"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/text_register_employee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_register_employee"
                        android:layout_alignStart="@+id/image_register_employee"
                        android:layout_alignEnd="@+id/image_register_employee"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:text="@string/registrar"
                        android:textAlignment="center"
                        android:textColor="@color/letras"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/text_perfil_employee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_perfil_employee"
                        android:layout_alignStart="@+id/image_perfil_employee"
                        android:layout_alignEnd="@+id/image_perfil_employee"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:text="@string/title_perfil"
                        android:textAlignment="center"
                        android:textColor="@color/letras"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/text_pontos_employee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_historicos_pontos"
                        android:layout_alignStart="@+id/image_historicos_pontos"
                        android:layout_alignEnd="@+id/image_historicos_pontos"
                        android:layout_marginStart="22dp"
                        android:layout_marginEnd="22dp"
                        android:text="@string/title_pontos"
                        android:textAlignment="center"
                        android:textColor="@color/letras"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/text_opcoes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_opcoes"
                        android:layout_alignStart="@+id/image_opcoes"
                        android:layout_alignEnd="@+id/image_opcoes"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="@string/opcoes"
                        android:textAlignment="center"
                        android:textColor="@color/letras"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                </RelativeLayout>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_tarefa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_toolbar_points"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp">

                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginStart="6dp"
                        android:text="@string/pontos_recentes"
                        android:textColor="@color/letras"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/image_add_ponto"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_add"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/filter_tarefa"
                        tools:ignore="ContentDescription,MissingConstraints" />

                    <ImageView
                        android:id="@+id/filter_tarefa"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginEnd="14dp"
                        android:src="@drawable/ic_filter"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/option_tarefa"
                        tools:ignore="ContentDescription,MissingConstraints" />

                    <ImageView
                        android:id="@+id/option_tarefa"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_option"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="ContentDescription,MissingConstraints" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_points"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/recycler_points"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_tarefa" />

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:indeterminateTint="@color/back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
