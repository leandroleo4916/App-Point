<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_employee_detail"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/backfrag"
    android:elevation="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_perfil_detail_dash"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/back_fundo_photo"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ProgressBar
        android:id="@+id/progress_hrs_done"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:indeterminate="false"
        android:max="220"
        android:progress="0"
        android:progressDrawable="@drawable/progress_hrs_fix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_perfil_detail_dash"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/progress_hours_done_cyrcle"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:max="220"
        android:progress="0"
        android:progressDrawable="@drawable/progress_hrs"
        app:layout_constraintBottom_toBottomOf="@+id/progress_hrs_done"
        app:layout_constraintEnd_toEndOf="@+id/progress_hrs_done"
        app:layout_constraintStart_toStartOf="@+id/progress_hrs_done"
        app:layout_constraintTop_toTopOf="@+id/progress_hrs_done"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_hours_done_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/letras"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/progress_hrs_done"
        app:layout_constraintEnd_toEndOf="@+id/progress_hours_done_cyrcle"
        app:layout_constraintStart_toStartOf="@+id/progress_hrs_done"
        app:layout_constraintTop_toTopOf="@+id/progress_hrs_done" />

    <ProgressBar
        android:id="@+id/progress_hrs_extras"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:indeterminate="false"
        android:max="40"
        android:progress="0"
        android:progressDrawable="@drawable/progress_hrs_fix"
        app:layout_constraintBottom_toBottomOf="@+id/progress_hrs_done"
        app:layout_constraintStart_toEndOf="@+id/progress_hrs_done"
        app:layout_constraintTop_toTopOf="@+id/progress_hrs_done"
        app:layout_constraintVertical_bias="0.433"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/progress_hours_extras_cyrcle"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:max="40"
        android:progress="0"
        android:progressDrawable="@drawable/progress_extra"
        app:layout_constraintBottom_toBottomOf="@+id/progress_hrs_extras"
        app:layout_constraintEnd_toEndOf="@+id/progress_hrs_extras"
        app:layout_constraintStart_toStartOf="@+id/progress_hrs_extras"
        app:layout_constraintTop_toTopOf="@+id/progress_hrs_extras"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_hours_extra_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/letras"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/progress_hours_extras_cyrcle"
        app:layout_constraintEnd_toEndOf="@+id/progress_hours_extras_cyrcle"
        app:layout_constraintStart_toStartOf="@+id/progress_hours_extras_cyrcle"
        app:layout_constraintTop_toTopOf="@+id/progress_hours_extras_cyrcle" />

    <ProgressBar
        android:id="@+id/progress_cadastro"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progress_hrs_fix"
        app:layout_constraintBottom_toBottomOf="@+id/progress_hrs_extras"
        app:layout_constraintStart_toEndOf="@+id/progress_hrs_extras"
        app:layout_constraintTop_toTopOf="@+id/progress_hrs_extras"
        app:layout_constraintVertical_bias="0.433"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/progress_cadastro_cyrcle"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progress_cadastro"
        app:layout_constraintBottom_toBottomOf="@+id/progress_cadastro"
        app:layout_constraintEnd_toEndOf="@+id/progress_cadastro"
        app:layout_constraintStart_toStartOf="@+id/progress_cadastro"
        app:layout_constraintTop_toTopOf="@+id/progress_cadastro"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_hours_cadastro_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/letras"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/progress_cadastro_cyrcle"
        app:layout_constraintEnd_toEndOf="@+id/progress_cadastro_cyrcle"
        app:layout_constraintStart_toStartOf="@+id/progress_cadastro_cyrcle"
        app:layout_constraintTop_toTopOf="@+id/progress_cadastro_cyrcle" />

    <Toolbar
        android:id="@+id/toolbar_line_recycler_detail"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="30dp"
        android:background="@color/letrashint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
