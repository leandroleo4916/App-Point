<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:padding="16dp">

    <TextView
        android:id="@+id/textArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Area"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerAreaFuncionario"
        app:layout_constraintStart_toStartOf="@+id/spinnerAreaFuncionario"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textCargo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Cargo"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerCargoFuncionario"
        app:layout_constraintStart_toStartOf="@+id/spinnerCargoFuncionario"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Horario de trabalho"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admissao"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/horario1"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:hint="00:00"
        android:textAlignment="center"
        android:inputType="number"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textHorario"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/horario2"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:hint="00:00"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/horario1"
        app:layout_constraintTop_toBottomOf="@id/textHorario"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/horario3"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:hint="00:00"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/horario2"
        app:layout_constraintTop_toBottomOf="@id/textHorario"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/horario4"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:hint="00:00"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/horario3"
        app:layout_constraintTop_toBottomOf="@id/textHorario"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/image_cam"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/cycle_img"
        android:src="@drawable/ic_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints" />

    <EditText
        android:id="@+id/nameFuncionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Nome"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_cam"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/horario3"
        app:layout_constraintEnd_toStartOf="@+id/horario4"
        app:layout_constraintStart_toEndOf="@+id/horario3"
        app:layout_constraintTop_toTopOf="@+id/horario3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/horario1"
        app:layout_constraintEnd_toStartOf="@+id/horario2"
        app:layout_constraintStart_toEndOf="@+id/horario1"
        app:layout_constraintTop_toTopOf="@+id/horario1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="@+id/horario2"
        app:layout_constraintEnd_toStartOf="@+id/horario3"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toEndOf="@+id/horario2"
        app:layout_constraintTop_toTopOf="@+id/horario2"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/emailFuncionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameFuncionario"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/endereco_funcionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Endereço"
        android:inputType=""
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailFuncionario"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Telefone"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:inputType="phone"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endereco_funcionario"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/admissao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Admissão"
        android:inputType="datetime"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telefone"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonGetFuncionario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/back_buttom"
        android:text="SALVAR"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCargoFuncionario"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinnerAreaFuncionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/horario1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <Spinner
        android:id="@+id/spinnerCargoFuncionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerAreaFuncionario"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>

